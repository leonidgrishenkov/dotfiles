# vim: set filetype=gitconfig:

[init]
    defaultBranch = main
[core]
    editor = nvim
    pager = delta
[interactive]
    diffFilter = delta --color-only
[merge]
    conflictStyle = zdiff3
[diff]
    colorMoved = default
[pull]
    rebase = false
[commit]
    gpgSign = true

[url "github-personal:"]
    insteadOf = https://github.com/

[include]
    path = ~/.config/git/private/main

[include]
    path = ~/.config/delta/config
