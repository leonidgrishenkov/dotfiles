# vim: set filetype=gitconfig:

[init]
    defaultBranch = main
[core]
    editor = nvim
    pager = delta
[interactive]
    diffFilter = delta --color-only
[merge]
    conflictStyle = zdiff3
    tool = nvimdiff
[mergetool]
	prompt = false
	keepBackup = false
[diff]
    colorMoved = default
[diff]
	algorithm = histogram
	colorMoved = default
	tool = nvimdiff
    submodule = log
[difftool]
	prompt = false
[pull]
    rebase = true
[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true

[include]
    path = ~/.config/delta/config

[includeIf "hasconfig:remote.*.url:https://github.com/leonidgrishenkov/**"]
    path = ~/.config/git/private/personal

[includeIf "hasconfig:remote.*.url:ssh://git@ssh.git.samoletgroup.ru:2222/cspb/**"]
    path = ~/.config/git/private/samolet

[includeIf "hasconfig:remote.*.url:ssh://git@bitbucket.playteam.ru/**"]
    path = ~/.config/git/private/okko
