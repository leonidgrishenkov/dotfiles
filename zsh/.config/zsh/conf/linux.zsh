eval "$($HOME/.local/bin/mise activate zsh)"

# === VI mode ===
# https://github.com/jeffreytse/zsh-vi-mode
# Install: git clone https://github.com/jeffreytse/zsh-vi-mode.git $XDG_DATA_HOME/zsh-vi-mode
source $XDG_DATA_HOME/zsh-vi-mode/zsh-vi-mode.plugin.zsh

# === Autosuggestions ===
# https://github.com/zsh-users/zsh-autosuggestions
# Install: git clone https://github.com/zsh-users/zsh-autosuggestions $XDG_DATA_HOME/zsh-autosuggestions
source $XDG_DATA_HOME/zsh-autosuggestions/zsh-autosuggestions.zsh

# === Syntax Highlighting ===
# https://github.com/zdharma-continuum/fast-syntax-highlighting
# Install: git clone https://github.com/zdharma-continuum/fast-syntax-highlighting $XDG_DATA_HOME/fast-syntax-highlighting
source $XDG_DATA_HOME/fast-syntax-highlighting/fast-syntax-highlighting.plugin.zsh
